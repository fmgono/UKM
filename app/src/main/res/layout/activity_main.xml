<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EEEEEE"
        tools:context="com.example.android.profileukm.MainActivity">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/shadow"
                android:id="@+id/view" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="130dp"
                android:layout_height="120dp"
                android:src="@drawable/profile"
                android:layout_alignBottom="@+id/view"
                android:layout_alignParentTop="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="BARUMUDA"
                android:fontFamily="sans-serif-medium"
                android:textSize="24sp"
                android:layout_toRightOf="@id/image"
                android:layout_alignBottom="@+id/view"
                android:gravity="center_vertical|center_horizontal"
                android:paddingRight="20dp"
                android:textColor="#F5F5F5"
                android:layout_alignParentTop="true" />
        </RelativeLayout>
        <TextView
            android:background="#ffffff"
            android:text="description"
            android:textColor="#03A9F4"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:paddingTop="14dp"
            android:paddingLeft="21dp"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
        <RelativeLayout
            android:layout_marginTop="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/line_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/detail"
                android:src="@drawable/detail"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:paddingTop="9dp"
                android:text="Barumuda (Barisan Remaja Ummatul Udaba). Yang merupakan usaha membuat kerajinan tangan yang pemasarannya melalui media internet"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <TextView
            android:background="#ffffff"
            android:text="detail"
            android:textColor="#03A9F4"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            android:paddingTop="14dp"
            android:paddingLeft="21dp"
            android:textAllCaps="true"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <RelativeLayout
            android:id="@+id/place"
            android:layout_marginTop="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/line_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/map"
                android:src="@drawable/map"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/city"
                android:text="Jakarta,"
                android:textColor="#212121"
                android:paddingTop="5dp"
                android:paddingLeft="15dp"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:layout_toRightOf="@id/map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/street"
                android:text="jl. amd xii rt 05/002\nno : 71"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/line_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/email"
                android:src="@drawable/email"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/domain_email"
                android:text="barumuda@androidkejar.co.id"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="3dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:background="@drawable/line_border"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginLeft="15dp"
                android:id="@+id/phone"
                android:src="@drawable/phone"
                android:layout_width="45dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/domain_email"
                android:text="0812-8859-2097"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:layout_toRightOf="@id/phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>